<% if User.current.memberships.any? %>
	<div id="redmine_zendesk_issue_bridge">
		<hr />
		<p>
		  <strong>Related Zendesk Tickets <%= image_tag 'spinner.gif', :plugin => 'redmine_zendesk_issue_bridge' %></strong>
		</p>
	</div>
	<script type="text/javascript">
		$.get("<%= issue_url(params[:id]) %>/redmine_zendesk_issue_bridge", function(data){
			$( '#redmine_zendesk_issue_bridge' ).html( data );
		})
	</script>
<% else %>
<% end %>
